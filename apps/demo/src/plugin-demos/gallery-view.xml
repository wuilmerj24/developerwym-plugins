<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:gv="@arepa/gallery-view" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="gallery-view" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
      <gv:GalleryView 
        debug="true" 
        language="en" 
        showHeader="true"
        headerBgColor="red"
        arrowIconColor="green"
        selectMax="10"
        showFooter="true"
        footerBgColor="green"
        edit="true"
        preview="true"
        fontColor="blue"
        orientation="vertical"
        scroll="onScroll"
        click="onClick"
      />
    </StackLayout>
</Page>